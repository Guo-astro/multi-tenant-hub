{
  "name": "ci_cd",
  "version": "0.1.0",
  "bin": {
    "ci_cd": "bin/ci_cd.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "rm -rf dist &&tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "clean:deploy": "echo y| cdk destroy --all  && cdk deploy --all --require-approval never",
    "root:deploy": "echo y| cdk deploy systemProvisioningPipeline --method=direct --require-approval never",
    "tenant:deploy": "echo y| cdk deploy tenantProvisioningPipeline --method=direct --require-approval never",
    "synth": "rm -rf cdk.out && cdk synth",
    "destroy": "echo y|./cleanup.sh",
    "local-synth": "cdk synth --context stackId=arn:aws:cognito-idp:ap-northeast-1:123456789012:userpool/ap-northeast-1_a1x4td8bP",
    "lint": "eslint --fix src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^1.9.0",
    "@multi-tenent-hub/eslint-config-custom": "workspace:^",
    "@multi-tenent-hub/tsconfig": "workspace:^",
    "@types/adm-zip": "^0.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.2",
    "@types/node": "20.3.1",
    "@types/source-map-support": "^0.5.6",
    "@types/tmp": "^0.2.3",
    "aws-cdk": "2.85.0",
    "esbuild": "^0.18.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.1.3"
  },
  "dependencies": {
    "@aws-amplify/auth": "^5.3.2",
    "@aws-lambda-powertools/metrics": "^1.10.0",
    "@aws-lambda-powertools/tracer": "^1.10.0",
    "@aws-sdk/client-cloudformation": "^3.358.0",
    "@aws-sdk/client-codepipeline": "^3.358.0",
    "@aws-sdk/client-dynamodb": "^3.358.0",
    "@aws-sdk/client-s3": "^3.358.0",
    "@aws-sdk/lib-dynamodb": "^3.358.0",
    "@aws-sdk/lib-storage": "^3.358.0",
    "@aws-sdk/util-dynamodb": "^3.358.0",
    "@middy/core": "^4.5.2",
    "@types/aws-lambda": "^8.10.119",
    "adm-zip": "^0.5.10",
    "aws-amplify": "^5.3.1",
    "aws-cdk-lib": "2.85.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1402.0",
    "botocore": "^0.0.1",
    "cdk-nag": "^2.27.48",
    "constructs": "^10.2.56",
    "fs-extra": "^10.1.0",
    "nanoid": "^4.0.2",
    "source-map-support": "^0.5.21",
    "tmp": "^0.2.1",
    "unzipper": "^0.10.14"
  }
}
